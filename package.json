{
	"name": "obvsnip",
	"version": "0.0.1",
	"description": "Obsidian VSCode snippet support",
	"main": "main.js",
	"scripts": {
		"dev": "npm-run-all --parallel dev:build dev:sync",
		"dev:build": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run copy",
		"copy": "mkdir -p build && cp main.js manifest.json styles.css build 2>/dev/null || cp main.js manifest.json build",
		"dev:sync": "chokidar \"main.js\" -c \"npm run copy\"",
		"test": "jest",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"devDependencies": {
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "6.38.6",
		"@types/jest": "^29.5.14",
		"@types/node": "^18.19.130",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"builtin-modules": "^3.3.0",
		"chokidar-cli": "^3.0.0",
		"esbuild": "^0.25.12",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^30.2.0",
		"npm-run-all": "^4.1.5",
		"obsidian": "^1.10.2-1",
		"ts-jest": "^29.4.5",
		"tslib": "^2.6.0",
		"typescript": "^5.3.3"
	}
}
