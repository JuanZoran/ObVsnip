{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "Node16",
		"target": "ES6",
		"noImplicitAny": true,
		"moduleResolution": "node16",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	},
	"include": ["main.ts", "src/**/*.ts"]
}
